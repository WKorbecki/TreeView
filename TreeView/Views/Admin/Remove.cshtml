@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@model TreeView.Models.Tree

@{
    ViewBag.Title = "Remove";
    string str = ViewBag.str;
}

<h2>Remove</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Tree</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ID_Root)
        </dt>

        <dd>
            @str
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            <div class="radio">
                @Html.Label("Childs_save", "Transfer children up level.", htmlAttributes: new { @class = "control-label" })
                @Html.RadioButton("Childs", "save", true, new { @id="Childs_save" })
            </div>
            <div class="radio">
                @Html.Label("Childs_remove", "Remove all children.", htmlAttributes: new { @class = "control-label" })
                @Html.RadioButton("Childs", "remove", false, new { @id = "Childs_remove" })
            </div>
        </div>

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
